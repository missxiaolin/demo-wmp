<!--index.wxml-->
<view class='container'>

  <canvas canvas-id="canvas1" style='width:100%;height:750rpx;' animation='{{animationData}}'>
    <cover-image class='plate' src='/images/plate.png'></cover-image>
  </canvas>

  <canvas canvas-id="canvas2" style='width:300rpx;height:300rpx;position:absolute;top:50%;left:45%;margin-left:-150rpx;margin-top:-150rpx;'>
    <button class='plate' catchtap='onTurnTap' style='background:url("/images/pointer.png") no-repeat top center;background-size:contain' disabled='{{disabled}}'></button>
  </canvas>

</view>

<view class='prize'>
  <text hidden="{{hidden}}">恭喜您获得{{prizes}}</text>
</view>